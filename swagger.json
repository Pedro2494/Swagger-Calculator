{
    "swagger": "2.0",
    "info": {
      "title": "Calculadora",
      "description": "API Calculadora com swagger",
      "version": "1.0"
    },
    "host": "localhost:8001",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "paths": {
      "/soma/{a}&{b}": {
        "get": {
          "description": "Escolha dois números.",
          "operationId": "SOMA",
          "parameters": [
            {
              "name": "a",
              "in": "path",
              "description": "Primeiro número. Valor por omissão <code>10</code>.",
              "required": true,
              "default": "10",
              "enum": [
                "10"
              ]
            },
            {
              "name": "b",
              "in": "path",
              "description": "Segundo número. Valor por omissão <code>15>/code>.",
              "required": true,
              "default": "15",
              "enum": [
                "15"
              ]
            }
          ],
          "responses": {}
        }
      }
    }   
}